{
    "name": "aluna/laracrud",
    "type": "library",
    "description": "CRUD for Laravel",
    "keywords": ["CRUD"],
    "homepage": "https://github.com/aluna/laracrud",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Luna",
            "email": "adrian.luna.rojas@gmail.com",
            "homepage": "http://adrianlunarojas.info",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "autoload": {
        "psr-0": {
            "LaraCrud": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    }
}
